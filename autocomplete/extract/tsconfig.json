{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["@withfig/autocomplete-types", "node"],
    // rule changes
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules/", "fig/", "build/"]
}
